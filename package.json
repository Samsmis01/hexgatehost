{
  "name": "baileys-pairing-server",
  "version": "1.0.0",
  "description": "Serveur Node.js pour connecter des utilisateurs à votre bot WhatsApp via Baileys",
  "type": "module",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "npm install --legacy-peer-deps",
    "preinstall": "echo 'Skipping auto-install bug on Render'",
    "postinstall": "npm install @whiskeysockets/baileys@6.4.0 pino@8.15.4 --no-save || true",
    "lint": "eslint .",
    "test": "echo \"Pas de tests configurés\""
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "body-parser": "^1.20.2",
    "chalk": "^5.3.0",
    "dotenv": "^16.3.1",
    "fs-extra": "^11.1.1",
    "path": "^0.12.7"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "eslint": "^9.15.0"
  },
  "keywords": [
    "whatsapp",
    "baileys",
    "bot",
    "pairing",
    "render",
    "multi-device"
  ],
  "author": "TonNom",
  "license": "MIT"
}
