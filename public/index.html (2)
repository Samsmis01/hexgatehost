    <script>
        // Éléments DOM
        const pairingForm = document.getElementById('pairingForm');
        const phoneNumberInput = document.getElementById('phoneNumber');
        const pairButton = document.getElementById('pairButton');
        const buttonText = document.getElementById('buttonText');
        const loader = document.getElementById('loader');
        const codeDisplay = document.getElementById('codeDisplay');
        const pairingCodeEl = document.getElementById('pairingCode');
        const dynamicInstructions = document.getElementById('dynamicInstructions');
        const botList = document.getElementById('botList');
        const emptyState = document.getElementById('emptyState');
        const refreshBtn = document.getElementById('refreshBtn');
        const toast = document.getElementById('toast');
        const totalBotsEl = document.getElementById('totalBots');
        const connectedBotsEl = document.getElementById('connectedBots');
        const sessionsEl = document.getElementById('sessions');
        const codeTimer = document.getElementById('codeTimer');
        const timerValue = document.getElementById('timerValue');

        // Variables globales
        let countdownInterval = null;
        let currentCode = '';
        const API_URL = window.location.origin;

        // Formater le numéro pour l'affichage
        function formatNumberForDisplay(number) {
            if (number.length === 12 && number.startsWith('243')) {
                return `+${number.slice(0, 3)} ${number.slice(3, 5)} ${number.slice(5, 8)} ${number.slice(8)}`;
            }
            return number;
        }

        // Démarrer le compte à rebours
        function startCountdown(duration = 300) { // 5 minutes par défaut
            let timeLeft = duration;
            
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
            
            countdownInterval = setInterval(() => {
                const minutes = Math.floor(timeLeft / 60);
                const seconds = timeLeft % 60;
                
                timerValue.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
                
                // Changement de couleur selon le temps restant
                if (timeLeft <= 60) {
                    codeTimer.style.color = 'var(--danger)';
                } else if (timeLeft <= 120) {
                    codeTimer.style.color = 'var(--warning)';
                }
                
                if (timeLeft <= 0) {
                    clearInterval(countdownInterval);
                    codeDisplay.classList.remove('show');
                    showToast('Le code pairing a expiré', 'error');
                }
                
                timeLeft--;
            }, 1000);
        }

        // Afficher un toast
        function showToast(message, type = 'success') {
            toast.textContent = message;
            toast.className = `toast ${type}`;
            toast.innerHTML = `
                <i class="fas fa-${
                    type === 'success' ? 'check-circle' : 
                    type === 'error' ? 'exclamation-circle' : 
                    'exclamation-triangle'
                }"></i>
                ${message}
            `;
            toast.classList.add('show');
            
            setTimeout(() => {
                toast.classList.remove('show');
            }, 5000);
        }

        // Générer un code pairing
        async function generatePairingCode() {
            const phoneNumber = phoneNumberInput.value.trim();
            
            // Validation stricte
            if (!phoneNumber || phoneNumber.length !== 12 || !phoneNumber.startsWith('243')) {
                showToast('Format invalide. Utilisez: 243 suivi de 9 chiffres (ex: 243810000000)', 'error');
                phoneNumberInput.focus();
                return;
            }

            // Afficher le loader
            pairButton.disabled = true;
            buttonText.textContent = 'Génération en cours...';
            loader.style.display = 'block';

            try {
                const response = await fetch(`${API_URL}/pair`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ number: phoneNumber })
                });

                const data = await response.json();

                if (response.ok && data.success) {
                    // Sauvegarder le code
                    currentCode = data.pairingCode;
                    
                    // Afficher le code à 8 caractères
                    pairingCodeEl.textContent = currentCode;
                    codeDisplay.classList.add('show');
                    
                    // Démarrer le compte à rebours
                    startCountdown(300); // 5 minutes
                    
                    // Mettre à jour les instructions
                    updateInstructions(currentCode);
                    
                    showToast('Code pairing 8 caractères généré avec succès !', 'success');
                    
                    // Actualiser la liste des bots
                    fetchActiveBots();
                    
                } else {
                    showToast(data.error || 'Erreur lors de la génération', 'error');
                }

            } catch (error) {
                console.error('Erreur:', error);
                showToast('Erreur de connexion au serveur', 'error');
            } finally {
                // Réinitialiser le bouton
                pairButton.disabled = false;
                buttonText.textContent = 'Générer le Code Pairing (8 caractères)';
                loader.style.display = 'none';
            }
        }

        // Mettre à jour les instructions
        function updateInstructions(code) {
            const codeWithoutDash = code.replace('-', '');
            
            dynamicInstructions.innerHTML = `
                <h3><i class="fas fa-info-circle"></i> Instructions HEXGATE V1</h3>
                
                <div class="warning-box">
                    <p style="color: #856404; font-weight: bold; margin-bottom: 10px;">
                        <i class="fas fa-exclamation-triangle"></i> CODE À 8 CARACTÈRES - COMPATIBLE WHATSAPP WEB
                    </p>
                    <p style="margin-bottom: 8px;">
                        <strong>Votre code: ${code}</strong>
                    </p>
                    <p>
                        Format exact demandé par WhatsApp : <strong>8 caractères alphanumériques</strong>
                    </p>
                </div>
                
                <ol>
                    <li><strong>Ouvrez WhatsApp</strong> sur votre téléphone</li>
                    <li><strong>Appuyez sur ⋮ (trois points)</strong> → <strong>Périphériques liés</strong></li>
                    <li><strong>Appuyez sur "Lier un appareil"</strong></li>
                    <li><strong>Sélectionnez "Lier avec numéro de téléphone"</strong></li>
                    <li><strong>Dans WhatsApp, entrez le code :</strong></li>
                    <li style="text-align: center; margin: 15px 0;">
                        <span style="
                            display: inline-block;
                            background: var(--primary);
                            color: white;
                            padding: 10px 20px;
                            border-radius: 10px;
                            font-family: 'Courier New', monospace;
                            font-size: 20px;
                            font-weight: bold;
                            letter-spacing: 3px;
                        ">${codeWithoutDash.slice(0, 4)} ${codeWithoutDash.slice(4)}</span>
                    </li>
                    <li><strong>Alternative :</strong> Si WhatsApp demande <code>XXXX XXXX</code>, entrez : <code>${codeWithoutDash.slice(0, 4)} ${codeWithoutDash.slice(4)}</code></li>
                    <li><strong>Validez</strong> et attendez la confirmation (10-20 secondes)</li>
                </ol>
                
                <div style="background: #e0f2fe; padding: 15px; border-radius: 10px; margin-top: 20px;">
                    <p style="color: var(--primary); font-weight: 600; margin-bottom: 8px;">
                        <i class="fas fa-bolt"></i> Conseil rapide
                    </p>
                    <p style="font-size: 14px; color: var(--gray);">
                        WhatsApp affichera votre bot comme : <strong>"HEXGATE V1"</strong> dans la liste des appareils connectés
                    </p>
                </div>
                
                <p style="color: var(--secondary); font-weight: 700; margin-top: 20px; text-align: center;">
                    <i class="fas fa-shield-alt"></i> Code valable 5 minutes | Format WhatsApp Web
                </p>
            `;
        }

        // Récupérer les bots actifs
        async function fetchActiveBots() {
            try {
                const response = await fetch(`${API_URL}/active`);
                const data = await response.json();
                
                if (response.ok) {
                    updateBotsList(data.bots);
                    updateStats(data.total || data.bots?.length || 0);
                }
            } catch (error) {
                console.error('Erreur lors de la récupération des bots:', error);
            }
        }

        // Mettre à jour la liste des bots
        function updateBotsList(bots) {
            botList.innerHTML = '';
            
            if (!bots || bots.length === 0) {
                botList.appendChild(emptyState);
                emptyState.style.display = 'block';
                return;
            }
            
            emptyState.style.display = 'none';
            
            // Trier par statut (connectés d'abord)
            const sortedBots = [...bots].sort((a, b) => {
                if (a.connected && !b.connected) return -1;
                if (!a.connected && b.connected) return 1;
                return 0;
            });
            
            sortedBots.forEach((bot, index) => {
                const botItem = document.createElement('div');
                botItem.className = 'bot-item slide-in';
                botItem.style.animationDelay = `${index * 0.1}s`;
                
                const statusClass = bot.connected ? 'status-connected' : 'status-disconnected';
                const statusText = bot.connected ? '✅ Connecté' : '❌ Déconnecté';
                const lastTwoDigits = bot.number.slice(-2);
                
                botItem.innerHTML = `
                    <div class="bot-info">
                        <div class="bot-avatar">${lastTwoDigits}</div>
                        <div class="bot-details">
                            <div class="bot-number">${formatNumberForDisplay(bot.number)}</div>
                            <span class="bot-status ${statusClass}">${statusText}</span>
                        </div>
                    </div>
                    <button class="disconnect-btn" data-number="${bot.number}">
                        <i class="fas fa-power-off"></i> Déconnecter
                    </button>
                `;
                
                botList.appendChild(botItem);
            });
            
            // Ajouter les écouteurs d'événements
            document.querySelectorAll('.disconnect-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const number = this.getAttribute('data-number');
                    disconnectBot(number);
                });
            });
        }

        // Mettre à jour les statistiques
        function updateStats(total) {
            totalBotsEl.textContent = total;
            
            // Calculer les bots connectés (à adapter selon votre API)
            const connectedCount = document.querySelectorAll('.status-connected').length;
            connectedBotsEl.textContent = connectedCount;
            
            sessionsEl.textContent = total; // Ou une autre logique selon vos besoins
        }

        // Déconnecter un bot
        async function disconnectBot(number) {
            if (!confirm(`Voulez-vous vraiment déconnecter ${formatNumberForDisplay(number)} ?`)) {
                return;
            }
            
            try {
                showToast('Déconnexion en cours...', 'warning');
                
                const response = await fetch(`${API_URL}/disconnect`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ number })
                });
                
                const data = await response.json();
                
                if (data.success) {
                    showToast('Bot déconnecté avec succès', 'success');
                    fetchActiveBots(); // Actualiser la liste
                } else {
                    showToast(data.error || 'Erreur de déconnexion', 'error');
                }
                
            } catch (error) {
                showToast('Erreur lors de la déconnexion', 'error');
            }
        }

        // Validation en temps réel du numéro
        phoneNumberInput.addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            
            // Forcer le préfixe 243
            if (!value.startsWith('243')) {
                value = '243' + value.replace(/^243/, '');
            }
            
            // Limiter à 12 caractères (243 + 9 chiffres)
            value = value.slice(0, 12);
            
            e.target.value = value;
            
            // Changer la couleur si valide
            if (value.length === 12) {
                e.target.style.borderColor = 'var(--secondary)';
                e.target.style.boxShadow = '0 0 0 3px rgba(16, 185, 129, 0.2)';
            } else {
                e.target.style.borderColor = 'var(--border)';
                e.target.style.boxShadow = 'none';
            }
        });

        // Soumission du formulaire
        pairingForm.addEventListener('submit', function(e) {
            e.preventDefault();
            generatePairingCode();
        });

        // Actualiser la liste des bots
        refreshBtn.addEventListener('click', function() {
            this.querySelector('i').classList.add('fa-spin');
            fetchActiveBots();
            
            setTimeout(() => {
                this.querySelector('i').classList.remove('fa-spin');
            }, 1000);
        });

        // Charger initialement les bots
        document.addEventListener('DOMContentLoaded', function() {
            fetchActiveBots();
            
            // Focus sur l'input avec animation
            setTimeout(() => {
                phoneNumberInput.focus();
                phoneNumberInput.style.transform = 'scale(1.02)';
                setTimeout(() => {
                    phoneNumberInput.style.transform = 'scale(1)';
                }, 300);
            }, 500);
            
            // Afficher un message de bienvenue
            setTimeout(() => {
                showToast('HEXGATE V1 - Système de pairing 8 caractères activé', 'success');
            }, 1000);
            
            // Vérifier la connexion au serveur
            checkServerStatus();
        });

        // Vérifier le statut du serveur
        async function checkServerStatus() {
            try {
                const response = await fetch(`${API_URL}/health`);
                if (response.ok) {
                    console.log('✅ Serveur connecté');
                }
            } catch (error) {
                showToast('Impossible de se connecter au serveur', 'error');
            }
        }

        // Actualisation automatique toutes les 30 secondes
        setInterval(fetchActiveBots, 30000);

        // Copier le code au clic
        pairingCodeEl.addEventListener('click', function() {
            if (currentCode) {
                const codeToCopy = currentCode.replace('-', '');
                navigator.clipboard.writeText(codeToCopy)
                    .then(() => {
                        showToast('Code copié dans le presse-papier !', 'success');
                    })
                    .catch(err => {
                        console.error('Erreur de copie:', err);
                    });
            }
        });

        // Effacer le code après expiration
        function clearCode() {
            currentCode = '';
            codeDisplay.classList.remove('show');
            if (countdownInterval) {
                clearInterval(countdownInterval);
            }
        }

        // Exposer les fonctions pour le débogage
        window.hexgate = {
            generatePairingCode,
            fetchActiveBots,
            disconnectBot,
            showToast,
            clearCode
        };
    </script>
</body>
</html>